{
    "compilerOptions": {
        "target": "es2018",
        "types": ["node", "jest"],
        "module": "commonjs",
        "rootDir": "./",
        "outDir": "./dist",
        "inlineSourceMap": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "compileOnSave": true,
    "include": ["."],
    "exclude": ["node_modules", "./dist"]
}
